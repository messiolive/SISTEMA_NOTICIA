<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        {{>errors}}
        <form method="POST" action="/users/update-profile">
            <div class="row">
                <div class="form-group col-md-6 mb-3">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{user.email}}" name="email" id="inputEmail" class="form-control" placeholder="Email" required>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label for="inputName">Nome</label>
                    <input type="text" value="{{user.name}}" name="name" id="inputName" class="form-control" placeholder="Nome" required>
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="inputAddress">Endereço</label>
                <input type="text" value="{{user.address}}" name="address" id="inputAddress" class="form-control" placeholder="Endereço"
                    required>
            </div>

            <div class="row">
                <div class="form-group col-md-4 mb-3">
                    <label for="inputState">Estado</label>
                    <select name="state" id="inputState" class="form-control" required>
                        <option value="" disabled {{#unless user.state}}selected{{/unless}}>Escolha um Estado</option>
                        {{#each states}}
                        <option value="{{this.value}}" {{#if (ifeq this.value ../user.state)}}selected{{/if}}>{{this.label}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group col-md-4 mb-3">
                    <label for="inputCity">Cidade</label>
                    <input type="text" value="{{user.city}}" name="city" id="inputCity" class="form-control" placeholder="Cidade" required>
                </div>
                <div class="form-group col-md-4 mb-3">
                    <label for="inputZipCode">CEP</label>
                    <input type="text" value="{{user.zipcode}}" name="zipcode" id="inputZipCode" class="form-control" placeholder="00000-000"
                        pattern="\d{5}-\d{3}" maxlength="9" required>
                </div>
            </div>

            <div class="form-group mb-3">
                <div class="form-check form-check-inline">
                    <input type="radio" name="gender" {{#if (ifeq user.gender 'M')}}checked{{/if}} id="inputGenderMale" class="form-check-input" value="M" required>
                    <label for="inputGenderMale">Masculino</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" name="gender" {{#if (ifeq user.gender 'F')}}checked{{/if}} id="inputGenderFemale" class="form-check-input" value="F" required>
                    <label for="inputGenderFemale">Feminino</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>
