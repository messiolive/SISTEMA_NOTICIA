<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        {{>errors}}
        <form method="POST" action="/users/update-password">
            <div class="form-group mb-3">
                <label for="inputOldPassword">Senha Antiga</label>
                <input type="password" name="oldPassword" id="inputOldPassword" class="form-control"
                    placeholder="Senha Antiga" required minlength="6" maxlength="20">
            </div>

            <div class="form-group mb-3">
                <label for="inputPassword">Senha</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Senha"
                    required minlength="6" maxlength="20">
            </div>

            <div class="form-group mb-3">
                <label for="inputPasswordConfirmation">Confirme a Senha</label>
                <input type="password" name="passwordConfirmation" id="inputPasswordConfirmation" class="form-control"
                    placeholder="Confirme a Senha" required minlength="6" maxlength="20">
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>